{% extends 'base.html.twig' %}

{% block body %}

    <div class="py-5 container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item text-danger"><a href="#" class="text-muted">Home</a></li>
                <li class="breadcrumb-item text-danger"><a href="#" class="text-danger">News</a></li>
            </ol>
        </nav>
        <div class="row">
            <div class="col col-md-9">
                {% for post in news %}

                    <div class="d-flex align-items-center">
                        <div class="mr-5">
                            <img class="card-img-left" src="{{ absolute_url(asset('assets/img/' ~ post.imageFile)) }}" alt="" style="width: 275px; height: 180px;object-fit: cover">
                        </div>
                        <div>
                            {{ include('main/_news_meta.html.twig') }}
                            <h2>{{ post.title }}</h2>
                            <p class="lead">{{ post.description }}</p>
                            <p class="lead mb-0"><a href="{{ path('show', { id: post.id }) }}" class="text-danger">Continue reading...</a></p>
                        </div>
                    </div>
                    <hr>
                {% endfor %}
            </div>
            <div class="col col-md-3">
                {{ include('main/_categories.html.twig') }}
            </div>

        </div>

    </div>
{% endblock %}