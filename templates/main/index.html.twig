{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

        <div class="nav-scroller py-1 mb-2">
            <nav class="nav d-flex justify-content-between">
                <a class="p-2 text-muted" href="#">World</a>
            </nav>
        </div>
        {% set latestPost = latest_post %}
        {% if latestPost %}
            <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark" style="background-image: url('{{ absolute_url(asset(latestPost.imageFile)) }}'); background-position: center;background-size: cover;box-shadow:inset 0 0 0 2000px rgba(33, 36, 39, 0.65);">
                <div class="col-md-8 px-0">
                    <h1 class="display-4 font-italic">{{ latestPost.title }}</h1>
                    <p class="lead my-3">{{ latestPost.description }}</p>
                    <p class="lead mb-0"><a href="{{ path('show', { id: latestPost.id }) }}" class="text-white font-weight-bold">Continue reading...</a></p>
                </div>
            </div>
        {% endif %}
        <div class="row mb-2">
            {% for post in latest_posts %}
                {% if not loop.first %}
            <div class="col-md-6">
                <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        {# <strong class="d-inline-block mb-2 text-primary">Add category here</strong> #}
                        <h3 class="mb-0">
                            <a class="text-dark" href="#">{{ post.title }}</a>
                        </h3>
                        {# <div class="mb-1 text-muted">Add date soon here</div> #}
                        <p class="card-text mb-auto">{{ post.description }}</p>
                        <a href="{{ path('show', { id: post.id }) }}">Continue reading</a>
                    </div>
                    <img class="card-img-right flex-auto d-none d-lg-block" src="{{ absolute_url(asset(post.imageFile)) }}" alt="Thumbnail [200x250]" style="width: 200px; height: 250px;object-fit: cover" >
                </div>
        </div>
                {% endif %}
            {% endfor %}
    </div>

{% endblock %}
